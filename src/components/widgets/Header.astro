---
import { Icon } from 'astro-icon';
import Logo from '~/components/atoms/Logo.astro';


// import { getPermalink, getBlogPermalink, getHomePermalink } from '~/utils/permalinks';
import { getPermalink, getHomePermalink } from '~/utils/permalinks';

---

<header
	class="sticky top-0 z-40 flex-none mx-auto w-full bg-marrom md:bg-marrom dark:bg-marrom dark:md:bg-marrom md:backdrop-blur-sm border-b dark:border-b-0"
>
	<div class="py-3 px-3 mx-auto w-full md:flex max-w-6xl md:px-4">
		<div class="flex justify-between">
			<a class="flex items-center" href={getHomePermalink()}>
				<Logo />
			</a>
		</div>
		<nav
			class="items-center w-full md:w-auto hidden md:flex text-gray-600 dark:text-slate-200 h-screen md:h-auto"
			aria-label="Main navigation"
			id="menu"
		>
			<ul
				class="flex flex-col pt-8 mx-40 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base"
			>
				<li>
					<a
						class="font-medium text-nude hover:text-black px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href="#">Home</a
					>
				</li>
				<li>
					<a
						class="font-medium text-nude hover:text-black px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href={getPermalink('useful-resources-to-create-websites', 'post')}
						>Sobre nós
					</a>
				</li>
				<li>
					<a
						class="font-medium text-nude hover:text-black px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href="#">Patricia Helú</a
					>
				</li>
				<li>
					<a
						class="font-medium text-nude hover:text-black px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href="#">Menu</a
					>
				</li>	
				<li>
					<a
						class="font-medium text-nude hover:text-black px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href="#">Contato</a
					>
				</li>								
			</ul>
			<div class="md:self-center flex items-center mb-4 md:mb-0 ml-2">
				<div class="hidden items-center md:flex">
					<Icon name="tabler:brand-instagram" class="w-5 h-5  text-nude" />
				</div>
			</div>
		</nav>
	</div>
</header>
